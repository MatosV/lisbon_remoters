<div class="create-container">
  <form action="/place/create" method="POST" enctype="multipart/form-data">

    <input required id="name-input" type="text" name="name" placeholder="Name" class="input">

    <input required id="latitude-input" type="text" name="latitude" placeholder="Latitude" class="input">

    <input required id="longitude-input" type="text" name="longitude" placeholder="Longitude" class="input">

    <input required id="description-input" type="text" name="description" placeholder="Description" class="input">
  
    <span>Choose your image</span>
    <input id="upload-image-input" name="images" type="file" class="input"/>
  
    <button class="button3">Create Place</button>
  </form>
</div>

