<div class="private-border">

  <section class="user-private">
    {{#with user}}
      <div class="profile-img">
        <img src="{{ photo }}" class="profile-picture-private"></a>
        <span class="span-profile-img"><strong>Name</strong>:{{name}}'s</span>
        <span class="span-profile-img"><strong>Email</strong>: {{email}}</span>
      </div>
    {{/with}} 
  </section>


  <form action="/user/private" method="POST" enctype="multipart/form-data">
    
    <label for="upload-image-input" class="upload-image-input">Update Image</label>
    <input id="upload-image-input" name="images" type="file" />
    
    <button>Update</button>

  </form>

  <form action="/authentication/change-password" method="POST"> 
    <label for="new-password" class="new-password">Update Password</label>
    <input type="password" name="password" id="new-password" placeholder="New Strong Password" />
  
    <button>Change password</button>
  </form>

</div>

